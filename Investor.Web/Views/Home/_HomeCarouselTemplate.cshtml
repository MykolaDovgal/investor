@inject Investor.Service.TimeService PostPublicationDate
@using Investor.Model

<section class="section-carousel">
    <div class="container">
        <div class="row">
            <div id="carouselExampleIndicators" class="carousel slide carousel-main" data-ride="carousel">
                <div class="carousel-inner">
                    @*<div class="carousel-item active">
                        <a href="/post/@(ViewBag.SliderNews[0].PostId)">
                            <img class="d-block img-fluid" src="~/img/posts/@(System.IO.Path.GetFileNameWithoutExtension(ViewBag.SliderNews[0].Image) + "/large-" + ViewBag.SliderNews[0].Image)" alt="First slide">
                        </a>
                        <div class="carousel-caption d-none d-sm-block">
                            <a href="/post/@ViewBag.SliderNews[0].PostId" class="text-left color-white">@ViewBag.SliderNews[0].Title</a>
                            <p class="text-left">@ViewBag.SliderNews[0].Description</p>
                        </div>
                    </div>*@
                    @for (int i = 0; i < ViewBag.SliderNews.Count; i++)
                    {
                        <div class='carousel-item @(i==0 ? "active" : "" )'>
                            <a href="/post/@(ViewBag.SliderNews[i].PostId)">
                                <div class="img-eclipse">

                                    <img class="d-block img-fluid" src="~/img/posts/@(System.IO.Path.GetFileNameWithoutExtension(ViewBag.SliderNews[i].Image) + "/large-" + ViewBag.SliderNews[i].Image)" alt="@i slide">

                                    <div class="carousel-caption d-none d-sm-block">
                                        <h3 href="/post/@ViewBag.SliderNews[i].PostId" class="text-left color-white">@ViewBag.SliderNews[i].Title</h3>
                                        <p class="text-left">@ViewBag.SliderNews[i].Description</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }

                </div>
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    @for (int i = 1; i < ViewBag.SliderNews.Count; i++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                    }
                </ol>
            </div>
            <div class="wrapper-popular">
                @for (int i = 0; i < ViewBag.SideNews.Count; i++)
                {
                    string publishedTime = PostPublicationDate.GetFormattedDate(ViewBag.SideNews[i].PublishedOn);
                    @Html.Partial("_PopularPostPreviewTemplate", ViewBag.SideNews[i] as PostPreview)
                }
            </div>
        </div>
    </div>
</section>
