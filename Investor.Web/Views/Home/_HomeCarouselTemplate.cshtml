@model Investor.Model.Views.SliderViewModel
@inject Investor.Service.TimeService PostPublicationDate

<section class="section-carousel">
    <div class="container">
        <div class="row">
            <div id="carouselExampleIndicators" class="carousel slide carousel-main" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="~/img/@Model.SliderItems[0].Post.Image" alt="First slide">
                        <div class="carousel-caption d-none d-sm-block">
                            <a href="#" class="text-left color-white">@Model.SliderItems[0].Post.Title</a>
                            <p class="text-left">@Model.SliderItems[0].Post.Description</p>
                        </div>
                    </div>
                    @for (int i = 1; i < Model.SliderItems.Count; i++)
                    {
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="~/img/@Model.SliderItems[i].Post.Image" alt="Second slide">
                            <div class="carousel-caption d-none d-sm-block">
                                <a href="#" class="text-left color-white">@Model.SliderItems[i].Post.Title</a>
                                <p class="text-left">@Model.SliderItems[i].Post.Description</p>
                            </div>
                        </div>
                    }

                </div>
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    @for (int i = 1; i < Model.SliderItems.Count; i++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                    }
                </ol>
            </div>
            <div class="wrapper-popular">
                @for (int i = 0; i < Model.SideItems.Count; i++)
                {
                    string publishedTime = PostPublicationDate.GetFormattedDate(Model.SliderItems[i].Post.PublishedOn);
                    <div class="item-popular-news">
                        <img src="~/img/@Model.SideItems[i].Post.Image" class="img-fluid" />
                        <div class="body-popular-news">
                            <a href="#" class="title-popular-news color-white">@Model.SideItems[i].Post.Title</a>
                            <span class="data-popular-news today">@publishedTime</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
