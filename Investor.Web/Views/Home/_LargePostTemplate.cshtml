@model Investor.Model.PostPreview
@inject Investor.Service.TimeService PostPublicationDate

@{
    string publishedTime = PostPublicationDate.GetFormattedDate(Model.PublishedOn);
}

<div class="item-news col-md-6">
    <div class="img-news">
        <img src="~/img/@Model.Image" class="img-fluid" />
    </div>
    <a href="/post/@Model.PostId" class="title-news">
        @Model.Title
    </a>
    <p class="text-news">
        @Model.Description
    </p>
    <span class="today-item-news @Model.Category.Url-today-color">@publishedTime</span>
</div>