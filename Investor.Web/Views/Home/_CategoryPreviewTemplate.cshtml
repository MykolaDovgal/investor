@model Investor.Model.Views.CategoryPreviewViewModel
@using Investor.Model
@inject Investor.Service.ThemeService CategoryStyle

@{
    string cssBorderStyle = CategoryStyle.categoryBorderTheme[Model.CategoryUrl];
    string cssCircleStyle = CategoryStyle.categoryMoreButtonTheme[Model.CategoryUrl];
}
<div class="category-news @Model.CategoryUrl-news">
    <div class="body-category-news block-border-top @cssBorderStyle mb-3">
        <h1 class="title-block">@Model.CategoryName</h1>
        <div class="row">
            @foreach (var largePost in Model.LargePostPreviewTemplate)
            {
                @Html.Partial("_LargePostTemplate", largePost as PostPreview)
            }

            @if (Model.LargePostPreviewTemplate.Count() == 1)
            {
                <div class="col-md-6">
                    @foreach (var smallPost in Model.SmallPostPreviewTemplate)
                    {
                        @Html.Partial("_SmallPostTemplate", smallPost as PostPreview)
                    }
                </div>
            }
            else
            {
                @foreach (var middlePost in Model.SmallPostPreviewTemplate)
                {
                    @Html.Partial("_MiddlePostTemplate", middlePost as PostPreview)
                }

            }
        </div>
    </div>

    <div class="wrapper-btn-more">
        <a href="/category/@Model.CategoryUrl" class="btn-more mx-auto"><span class="circle @cssCircleStyle"><i class="icons icon-arrow-down"></i></span>Більше новин</a>
    </div>

</div>