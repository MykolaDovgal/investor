@model Investor.Model.PostPreview
@inject Investor.Service.Utils.TimeService PostPublicationDate
@inject Investor.Service.Utils.Interfaces.IImagePathService ImagePath
@{
    string publishedTime = PostPublicationDate.GetFormattedDate(Model.PublishedOn);
}

<div class="item-news col-sm-6 col-md-4">
    <div class="img-news img-eclipse">
        <a href="/post/@Model.PostId">
            <img src="~/@ImagePath.GetImagePath(Model.Image, Model.PostId, "medium-")" class="img-fluid" />
        </a>
    </div>
    <a href="/post/@Model.PostId" class="title-news">@Model.Title</a>
    <span class="today-item-news  @Model.Category.Url-today-color">@publishedTime</span>
</div>
