<section class="section-create-post">
    <div class="container">
        <form>
            <div class="row">
                <div class="col-lg-8 pl-0 p-0 pr-lg-2">
                    <div class="body-block block-border-top default-border-color">
                        <h2 class="title-block">Створити статтю</h2>
                        <div class="form-group">
                            <label>Заголовок</label>
                            <input type="text" class="form-control focus-input focus-color-default input-value" data-validation="required" data-validation-error-msg-required="Це обов'язкове поле">
                        </div>
                        <div class="form-group">
                            <label>Короткий опис</label>
                            <textarea class="form-control focus-input focus-color-default input-value" rows="4" data-validation="required" data-validation-error-msg-required="Це обов'язкове поле"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Текст статті</label>
                            <textarea class="form-control focus-input focus-color-default input-value textarea" rows="15" data-validation="required" data-validation-error-msg-required="Це обов'язкове поле"></textarea>
                        </div>
                        <div class="d-inline-block w-100 mt-3">
                            <button type="submit" class="btn btn-second mr-4">Створити запис</button>
                            <button type="submit" class="btn btn-delete">Видалити статтю</button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 pl-lg-2  p-0 pr-0">
                    <div class="body-block block-border-top default-border-color">
                        <h2 class="title-block">Опишіть деталі</h2>
                        <div class="form-group">
                            <label>Завантажте фотографію</label>
                            <div class="input-group input-file">
                                <span class="input-group-btn">
                                    <span class="btn btn-second btn-file">
                                        Вибрати файл <input type="file" id="imgInp">
                                    </span>
                                </span>
                                <input type="text" class="form-control" readonly="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Опишіть що тут зображено</label>
                            <input type="text" class="form-control focus-input focus-color-default input-value">
                        </div>
                        <div class="form-group">
                            <label>Додайте теги</label>
                               
                            <input type="text" class="form-control form-control-tags focus-input focus-color-default input-value" data-role="tagsinput">
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

