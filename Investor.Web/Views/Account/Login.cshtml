@model Investor.Model.Views.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Investor</title>
    <link rel="stylesheet" href="~/css/style.min.css">
    <link href="~/css/addition_styles.css" rel="stylesheet" />
</head>
<body>
    <a href="/" class="btn-back btn-fixed"><i class="icons icon-arrow-back"></i>Повернутись на Investor</a>
    <section class="section-login">
        <div class="block-login">
            <img src="~/img/logo-login.png" class="img-fluid mx-auto d-block" />
            <form  method="post" asp-controller="Account" asp-action="Login">
                <div class="form-login block-border-top default-border-color mb-3">
                    <div class="row">
                        <div class="col-md-9 pr-md-4 pl-0 pl-0 px-0 form-login-br">
                            <h3 class="form-login-title mb-4">Вхід в обліковий запис</h3>
                            <div class="form-group">
                                <label asp-for="Email">Електронна адреса</label><br />
                                <input asp-for="Email" class="form-control" type="email" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Пароль</label><br />
                                <input asp-for="Password" type="password" class="form-control" />
                            </div>
                            <div class="form-check m-0">
                                <div class="checkbox">
                                    <input asp-for="RememberMe" type="checkbox" />
                                    <label asp-for="RememberMe" class="m-0">Запамятати мене</label>
                                </div>
                            </div>
                            <div class="error">@(ViewData.ContainsKey("Error") ? ViewBag.Error : "") </div>
                        </div>
                        <div class="col-md-3 p-0 flex-v-center">
                            <div class="wrapper-login-social mx-auto d-block">
                                <a href="#" class="login-social mx-auto d-md-block d-inline-block"><i class="fa fa-facebook gray--darken" aria-hidden="true"></i></a>
                                <a href="#" class="login-social mx-auto d-md-block d-inline-block"><i class="fa fa-twitter gray--darken" aria-hidden="true"></i></a>
                                <a href="#" class="login-social mx-auto d-md-block d-inline-block"><i class="fa fa-google-plus gray--darken" aria-hidden="true"></i></a>
                            </div>
                        </div>

                    </div>
                </div>
                <button type="submit" class="btn btn-standart"><span class="circle circle-green-color"><i class="icons icon-chack"></i></span>Увійти</button>
            </form>
        </div>
    </section>
</body>
</html>