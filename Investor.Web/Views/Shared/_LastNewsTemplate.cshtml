@model Investor.Model.PostPreview
<div class="item-last-news">
    @{
        string classStyle = "";
        @if (Model.IsImportant ?? false)
        {
            classStyle = "bold";
        }

    }
    <a bold href="/post/@Model.PostId" class="title-last-news @classStyle">
        @Model.Title
    </a>
    <span class="today-item-news default-today-color">Сьогодні,  12:43</span>
</div>