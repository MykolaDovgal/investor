@model IEnumerable<Investor.Model.PostPreview>
@using Investor.Model
<div class="block-border-top @(ViewBag.IsBlog != null ? "blog" : "default")-border-color last-news">
    <h2 class="title-block">Останні новини</h2>
    <div class="wrapper-last-news">

        @foreach (PostPreview lastPost in Model)
        {
            @Html.Partial("_LastNewsTemplate", lastPost)
        }
    </div>
    <a href="#" class="btn-more"><span class="circle circle-@(ViewBag.IsBlog != null ? "blog" : "default")-color"><i class="icons icon-arrow-down"></i></span>Більше новин</a>
</div>
