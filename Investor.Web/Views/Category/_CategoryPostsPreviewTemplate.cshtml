@model IEnumerable<Investor.Model.PostPreview>
@inject Investor.Service.ThemeService CategoryStyle
@using Investor.Model
@{
    ViewData["Title"] = ViewBag.CategoryUrl + " Page";
    
    string cssBorderStyle = CategoryStyle.categoryBorderTheme[Model.FirstOrDefault().Category.Url];
    string cssCircleStyle = CategoryStyle.categoryMoreButtonTheme[Model.FirstOrDefault().Category.Url];
}
<div class="col-lg-8 pl-0 p-0 pr-lg-2">
    <div class="category-news">
        <div class="body-category-news block-border-top @cssBorderStyle mb-3">
            <h1 class="title-block">@ViewBag.CategoryName</h1>
            <div class="row">
                @foreach(var post in Model)
                {
                    @Html.Partial("_PostPreviewTemplate", post)
                }
            </div>
        </div>
        <div class="wrapper-btn-more">
            <a href="#" class="btn-more mx-auto"><span class="circle @cssCircleStyle"><i class="icons icon-arrow-down"></i></span>Більше новин</a>
        </div>
    </div>
</div>