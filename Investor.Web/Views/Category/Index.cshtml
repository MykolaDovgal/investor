@using Investor.Model

<section class="section-popular-news">
    <div class="container">
        <div class="row">
            @for (int i = 0; i < ViewBag.CategoryPopularPosts.Count; i++)
            {
                 string styleClass = i < 2 ? "col-md-6" : "col-md-4";
                <div class="item-popular-news col-xs-12 @styleClass">
                    <div class="img-eclipse">
                        @Html.Partial("_PopularPostTemplate", ViewBag.CategoryPopularPosts[i] as PostPreview)
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="section-all-news">
    <div class="container">
        <div class="row">
            @Html.Partial("_CategoryPostsPreviewTemplate", ViewBag.CategoryPosts as IEnumerable<PostPreview>)
            <div class="col-lg-4 pl-lg-2  p-0 pr-0">
                @Html.Partial("_LastNewsPreviewTemplate", ViewBag.LatestPosts as IEnumerable<PostPreview>)
            </div>
        </div>
    </div>
</section>
