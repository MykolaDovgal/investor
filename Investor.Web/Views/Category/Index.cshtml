
@using Investor.Model

<section class="section-popular-news">
    <div class="container">
        <div class="row">
            @for(int i=0; i<2; i++)
            {
                @Html.Partial("_LargePopularPost", ViewBag.CategoryPopularPosts[0] as Post)
            }

            @for (int i = 2; i < ViewBag.CategoryPopularPosts.Count; i++)
            {
                @Html.Partial("_SmallPopularPost", ViewBag.CategoryPopularPosts[0] as Post)
            }
        </div>
    </div>
</section>

<section class="section-all-news">
    <div class="container">
        <div class="row">
            @Html.Partial("_CategoryPosts", ViewBag.CategoryPosts as IEnumerable<Post>)
            <div class="col-lg-4 pl-lg-2  p-0 pr-0">
                <div class="block-border-top default-border-color last-news">
                    <h2 class="title-block">Останні новини</h2>
                    <div class="wrapper-last-news">
                        @foreach (Post lastPost in ViewBag.LatestPost as List<Post>)
                        {
                            @Html.Partial("_LastNewsTemplate", lastPost)
                        }
                    </div>
                    <a href="#" class="btn-more"><span class="circle circle-default-color"><i class="icons icon-arrow-down"></i></span>Більше новин</a>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="js/allscripts.min.js"></script>
