@using Investor.Model

<section class="section-popular-news">
    <div class="container">
        <div class="row">
            @for(int i=0; i<2; i++)
            {
                @Html.Partial("_LargePopularPost", ViewBag.CategoryPopularPosts[i] as Post)
            }

            @for (int i = 2; i < ViewBag.CategoryPopularPosts.Count; i++)
            {
                @Html.Partial("_SmallPopularPost", ViewBag.CategoryPopularPosts[i] as Post)
            }
        </div>
    </div>
</section>

<section class="section-all-news">
    <div class="container">
        <div class="row">
            @Html.Partial("_CategoryPostsPreviewTemplate", ViewBag.CategoryPosts as IEnumerable<PostPreview>)
            <div class="col-lg-4 pl-lg-2  p-0 pr-0">
                @Html.Partial("_LatestNewsPreviewTemplate", ViewBag.LatestPosts as IEnumerable<PostPreview>)
            </div>
        </div>
    </div>
</section>
