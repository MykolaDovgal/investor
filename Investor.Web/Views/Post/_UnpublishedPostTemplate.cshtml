@model Investor.Model.News
@inject Investor.Service.Utils.TimeService PostPublicationDate
@inject Investor.Service.Utils.Interfaces.IImagePathService ImagePath
@inject Investor.Service.Interfaces.IStatisticsService StatisticsService
@using Investor.Model

<h1 class="title-card-page">
    @Model.Title
</h1>
<div class="info-news">
    <span class="card-category-news color-@(Model.Category.Url) m"><img src="/img/little-icons/no-img-@(Model.Category.Url).png">@Model.Category.Name</span>
    <span class="data-post"><i class="icons icon-clock"></i> @(Model.IsPublished ? PostPublicationDate.GetFormattedDate(Model.PublishedOn) : "Не опубліковано")</span>
    <span class="reviews-post"><i class="icons icon-reviews"></i>@StatisticsService.GetPostViewsCountByIdAsync(Model.PostId).Result</span>
</div>

<div class="card-news-img mt-4 mb-5">
    <img src="~/@ImagePath.GetImagePath(Model.Image, Model.PostId)" class="img-fluid" />
</div>
<div class="card-news-desc mb-5">
    @Html.Raw(Model.Article)
</div>
<ul class="wrapper-hashtag  mb-4">
    @foreach (Tag tag in ViewBag.Tags)
    {
    <li><a asp-controller="Search" asp-action="SearchByTag" asp-route-tag="@tag.Name" class="item-hashtag">@tag.Name</a></li>
    }
</ul>
