@model Investor.Model.Post
@using Investor.Model
<div class="sidebar-right">
    <button type="button" class="btn green-meadow" style="width: 100%">Перейти до поста</button>
    <button type="submit" class="btn blue-madison" style="width: 100%" form="updateForm" id="updateFormSubmit" data-action="" >Зберегти</button>
    <button type="button" class="btn grey-cascade" style="width: 100%">Відмінити</button>

    <div class="newpost-widget">
        <label class="newpost-widget-title ng-binding">Метки</label>


        <select class="bs-select form-control" tabindex="-98" name="Category.Url">
            @foreach(var category in ViewBag.Categories)
            {
                <option @(Model.Category != null ? (Model.Category.Name == category.Name ? "selected" : "") : "") value="@category.Url">@category.Name</option>
            }
        </select>

    @{
        string tags = "";
        if (ViewData.ContainsKey("Tags")) {
            foreach (Tag tag in ViewBag.Tags)
            {
                tags += tag.Name + ",";

            }
        }
    }
    </div>
    <div id="the-basics">
        <input id="tagTypeahead" class="typeahead" type="text" placeholder="States of USA " data-role="tagsinput" name="tagsName" value="@tags" />
    </div>
    <label class="mt-checkbox mt-checkbox-outline">
        Опубліковано
        <input type="checkbox" value="true" name="IsPublished" @(Model.IsPublished ? "checked" : "") />
        <span></span>
    </label>
    <label class="mt-checkbox mt-checkbox-outline">
        На головній сторінці
        <input type="checkbox" value="true" name="IsOnMainPage" @(Model.IsOnMainPage ? "checked" : "") />
        <span></span>
    </label>
    <label class="mt-checkbox mt-checkbox-outline">
        На боковій панелі слайдера
        <input type="checkbox" value="true" name="IsOnSide" @(ViewData.ContainsKey("IsOnSide") ? (ViewBag.IsOnSide ? "checked" : "") : "") />
        <span></span>
    </label>
    <label class="mt-checkbox mt-checkbox-outline">
        На слайдері
        <input type="checkbox" value="true" name="IsOnSlider" @(ViewData.ContainsKey("IsOnSlider") ?(ViewBag.IsOnSlider ? "checked" : "") : "") />
        <span></span>
    </label>
    <label class="mt-checkbox mt-checkbox-outline color-white">
        Рекомендовано редакцією
        <input type="checkbox" value="true" name="IsImportant" @(Model.IsImportant ? "checked" : "") />
        <span></span>
    </label>
</div>