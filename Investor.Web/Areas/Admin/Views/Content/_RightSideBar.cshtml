@model Investor.Model.Post
<div class="sidebar-right">
    <button type="button" class="btn green-meadow" style="width: 100%">Перейти до поста</button>
    <button type="button" class="btn yellow-crusta" style="width: 100%">Відмінити публікацію</button>
    <button type="button" class="btn blue-madison" style="width: 100%">Зберегти</button>
    <button type="button" class="btn grey-cascade" style="width: 100%">Відмінити</button>

    <div class="newpost-widget">
        <label class="newpost-widget-title ng-binding">Метки</label>


        <select class="bs-select form-control"  tabindex="-98">
            @for (int i = 0; i < ViewBag.Categories.Count; i++)
            {
                <option @(Model.Category.Name == ViewBag.Categories[i].Name ? "selected" : "")>@ViewBag.Categories[i].Name</option>
            }
        </select>

    </div>
    <div id="the-basics">
        <input id="tagTypeahead" class="typeahead" type="text" placeholder="States of USA " data-role="tagsinput" />
    </div>
    <label class="mt-checkbox mt-checkbox-outline">
        На головній сторінці
        <input type="checkbox" value="1" name="test"  @(Model.IsOnMainPage ? "checked" : "")/>
        <span></span>
    </label>
    <label class="mt-checkbox mt-checkbox-outline">
        На боковій панелі слайдера
        <input type="checkbox" value="1" name="test" @(ViewBag.IsOnSide ? "checked" : "")/>
        <span></span>
    </label>
    <label class="mt-checkbox mt-checkbox-outline">
        На слайдері
        <input type="checkbox" value="1" name="test" @(ViewBag.IsOnSlider ? "checked" : "")/>
        <span></span>
    </label>
    <label class="mt-checkbox mt-checkbox-outline color-white">
        Рекомендовано редакцією
        <input type="checkbox" value="1" name="test" @(Model.IsImportant ? "checked" : "")/>
        <span></span>
    </label>
</div>