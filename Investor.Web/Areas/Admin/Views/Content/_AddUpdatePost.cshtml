@model Investor.Model.News
@inject Investor.Service.Utils.Interfaces.IImagePathService ImagePath

<input type="text" hidden value="@Model.PostId" name="PostId" />

<div class="page-content page-post">

    <div class="form-group form-md-line-input form-md-floating-label has-info">
        <input type="text" class="form-control @(String.IsNullOrEmpty(Model.Title) ? "" : "edited")" id="title" value="@Model.Title" name="Title" required="required">
        <label for="title">Назва</label>
    </div>

    <div class="form-group form-md-line-input form-md-floating-label has-info">
        <textarea class="form-control @(String.IsNullOrEmpty(Model.Title) ? "" : "edited")" id="description" name="Description" required="required">@Model.Description</textarea>
        <label for="description">Опис</label>
    </div>

    <div class="fileinput fileinput-new" data-provides="fileinput">
        <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;">
            <img class="cropper" src="~/@ImagePath.GetImagePath(Model.Image, Model.PostId, "large-")" alt="" required="required" />
        </div>
        <div>
            <span class="btn red btn-outline btn-file">
                <span class="fileinput-new"> Вибрати світлину </span>
                <span class="fileinput-exists"> Змніити </span>
                <input type="file" name="Image" value="~/@ImagePath.GetImagePath(Model.Image, Model.PostId, "large-")">
            </span>
            <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Видалити </a>
        </div>
    </div>
    <div class="img-preview"></div>
    <textarea class="text-editor" id="Article">@(Model.Article)</textarea>
</div>
