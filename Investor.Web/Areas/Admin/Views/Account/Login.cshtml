@model Investor.Model.Views.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Investor</title>
    <link href="~/css/metronic/style.css" rel="stylesheet" />
    <link href="~/css/addition_styles.css" rel="stylesheet" />
</head>
<body>
    <a href="/home/index" class="btn-back btn-fixed">&larr;Повернутись на Investor</a>
    <section class="section-login">
        <div class="block-login">
            <img src="~/img/admin/admin%20Investor.png" class="img-fluid mx-auto d-block" />
            <form asp-route="/Admin/Account/Login" method="post">
                <div class="form-login block-border-top default-border-color mb-3">
                    <div class="row">
                        <div class="col-md-11 pr-md-11 pl-0 pl-0 px-0 form-login-br">
                            <h3 class="form-login-title mb-4">Вхід в обліковий запис</h3>
                            <div class="form-group">
                                <label asp-for="Email">Електронна адреса</label>
                                <input asp-for="Email" type="email" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Пароль</label>
                                <input asp-for="Password" type="password" class="form-control">
                            </div>
                            <div class="form-check m-0">
                                <div class="checkbox">
                                    <label class="custom-control custom-checkbox ">
                                        <input asp-for="RememberMe" id="checkbox1" type="checkbox" class="custom-control-input md-check">
                                        <span class="custom-control-indicator"></span>
                                    </label>
                                    <label asp-for="RememberMe" for="checkbox1" class="m-0">
                                        Запамятати мене
                                    </label>
                                </div>
                            </div>
                            <div class="error">@(ViewData.ContainsKey("Error") ? ViewBag.Error : "") </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-standart"><span class="circle circle-green-color"><i class="icons icon-chack"></i></span>Увійти</button>
            </form>
        </div>
    </section>
    <script src="~/js/allscripts.min.js"></script>
</body>
</html>